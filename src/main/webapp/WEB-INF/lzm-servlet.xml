<?xml version="1.0" encoding="utf-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="    
    http://www.springframework.org/schema/beans   
    http://www.springframework.org/schema/beans/spring-beans-4.0.xsd  
    http://www.springframework.org/schema/context  
    http://www.springframework.org/schema/context/spring-context-4.0.xsd  
    ">
	<!-- Spring加载器 -->
	<import resource="classpath:context/applicationContext.xml" />
	<!-- 数据连接池 -->
	<import resource="classpath:context/application-database.xml" />
	<!-- AOP切面 -->
	<import resource="classpath:context/application-aop.xml" />
	<!-- MQ触发器 -->
	<import resource="classpath:context/application-MethodInvoking.xml" />
	<!-- socket <import resource="/classes/context/application-socket.xml" /> -->
	<!-- 缓存 <import resource="context/applicationCache.xml" /> -->
</beans>
